@{
    ViewData["Title"] = "Customer List";
}

<input type="text" ng-model="lastNameFilter" placeholder="Filter By Last Name" />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Company Name</th>
            <th scope="col">Address Block</th>
        </tr>
    </thead>
    <tbody ng-controller="customerListController">
        <tr ng-repeat="customer in customerList | filter:lastNameFilter">
            <td>{{$index + 1}}</td>
            <td>{{customer.firstName}}</td>
            <td>{{customer.lastName}}</td>
            <td>{{customer.companyName}}</td>
            <td>{{customer.addressBlock}}</td>
        </tr>
    </tbody>
</table>